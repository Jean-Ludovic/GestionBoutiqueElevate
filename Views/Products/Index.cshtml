@model IEnumerable<GestionBoutiqueElevate.Models.Product>
@{
    ViewData["Title"] = "Produits";
    var q = (string)(ViewData["Query"] ?? "");
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Produits</h2>
    <a class="btn btn-primary" asp-action="Create">+ Nouveau produit</a>
</div>

<form method="get" class="mb-3">
    <div class="input-group">
        <input name="q" class="form-control" placeholder="Rechercher par nom, SKU, catégorie..." value="@q" />
        <button class="btn btn-outline-secondary" type="submit">Rechercher</button>
        @if (!string.IsNullOrWhiteSpace(q))
        {
            <a class="btn btn-outline-danger" href="@Url.Action("Index","Products")">Effacer</a>
        }
    </div>
</form>

<table class="table table-hover align-middle">
    <thead>
        <tr>
            <th>#</th>
            <th>SKU</th>
            <th>Nom</th>
            <th>Catégorie</th>
            <th class="text-end">Prix</th>
            <th class="text-end">Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr class="@(p.IsLowStock() ? "table-warning" : "")">
                <td>@p.Id</td>
                <td>@p.Sku</td>
                <td>@p.Name</td>
                <td>@p.Category</td>
                <td class="text-end">@p.Price.ToString("C")</td>
                <td class="text-end">@p.Stock</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@p.Id">Détails</a>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@p.Id">Éditer</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@p.Id">Suppr.</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">Aucun produit.</div>
}
